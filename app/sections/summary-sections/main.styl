svg#section-link-overlay
  pointer-events none
  rect.section-tracker
    outline: 2px solid alpha(red, 0.2)
    fill: alpha(red, 0.05)
  &.skeletal
    outline: 2px solid alpha(red, 0.2)
    background: alpha(red, 0.05)

  path.section-link
    pointer-events all
    fill none
    &.inferred
      stroke-dasharray: 2,4
    &.commonality-0
      stroke-width 2
    &.commonality-2
      stroke-width 1.5
      &.inferred
        stroke-dasharray: 4,8
    &.commonality-3
      stroke-width 1

div.section-page#generalized-sections svg
  margin-bottom 1em

div.grouped-sections
  display flex
  flex-direction row

div.section-page#summary-sections
  .align-with-sections
    margin-top 3em
  .location-group
    position relative
    &#Ubisis
      h1
        top 560px
    &#Tsams
      h1
        top 370px
    h1
      position absolute
      top -20px
      left 0
      font-size 2em
      color #888

    &.chemostratigraphy
      margin 2em 2em 0 2em
  .section-container h2
    position absolute
    left: -5px
    top: 8px
    text-align right
  .section-header.subtle h2
    font-weight: 400
    font-size 1em

div.isotopes

  g.data-points
    line
      stroke-width 4px
      stroke-linecap round

  g.scale g.tick
    line
      stroke-width 1px
      stroke #ccc
    &.zero
      line
        stroke #888
        stroke-width 2px
    text
      text-anchor middle
      fill #888
      font-size 10px
      font-style italic

#summary-sections-legend
  h1, h2, h3
    line-height inherit
  .legend-inner
    display flex
    flex-direction row
    &>div
      flex 1
    &>div
      padding 1em
  margin 2em 4em
  margin-top 0
  width 40em
  z-index 12
  align-items top
  background-color white
  h2
    font-size 1.5em

  h4
    margin-top 1.5em
  div.facies .header
    margin-bottom 0.3em
    display flex
    flex-direction row
    p.name
      flex-grow 1
      margin-right 1em

  p.note
    font-style italic

  div.symbol-legend>div
    img
      width 30px
      height 30px
    &>div
      display flex
      flex-direction row
      align-items baseline
      justify-content middle
      span
        flex-grow 1
        display block
        margin-left 1em



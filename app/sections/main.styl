*
  font-family: "Helvetica Neue"

ul
  list-style: none
  padding-left: 0

li a

body
  background-color: white

div.page
  display: flex
  flex-direction: column

#section-page
  width: 100%
  overflow: scroll
  display: flex
  flex-direction: row
  background-color: white
  flex: 1

div.section-container
  flex: flex-grow

ul.controls
  position: absolute
  top 0
  right 0
  margin: 1em
  z-index: 10
  li
    display: inline-block
    margin-left: 0.5em
    a
      background-color: #ccc
      margin-bottom: 1em
      text-decoration: none
      padding 0.4em
      padding-top: 0.4em
      width: 2em
      height: 2em
      text-align: center
      border-radius: 1.5em
      display: block
      color: black
      &:hover
        color: white
        background-color: dodgerblue


*
  font-family: "Helvetica Neue"

ul
  list-style: none
  padding-left: 0

li a

body
  background-color: white
*
  box-sizing: border-box
  &:focus
    outline: none

input[type=checkbox]:focus
  outline: 0

#main .page.section-page
  display: flex
  flex-direction: row

#section-pane
  position: relative
  width: 100%
  overflow: scroll
  flex-grow: 1
  display: flex
  flex-direction: column

#section-page
  width: 100%
  cursor: move
  overflow: hidden
  flex-grow: 1

#section-page-inner
  display: flex
  flex-direction: row
  background-color: white

div.section-container
  flex: flex-grow

ul.controls
  position: absolute
  top 0
  right 0
  margin: 1em
  z-index: 10
  li
    display: inline-block
    margin-left: 0.5em
    a
      background-color: #ccc
      border: 2px solid #999
      color: #666
      margin-bottom: 1em
      text-decoration: none
      padding 0.4em
      padding-top: 0.4em
      width: 3em
      height: 3em
      text-align: center
      border-radius: 1.5em
      display: block
      &:hover
        color: white
        background-color: dodgerblue
        border-color: darken(dodgerblue, 20%)


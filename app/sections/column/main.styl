rect.lithology
  &.definite
    stroke: black
    stroke-width: 1px

div.section-container
  position: relative
  margin: 2em
  &.skeleton
    h2, p
      color: blue
    border: 1px solid dodgerblue

    .section
      border: 1px solid dodgerblue

div.section-outer
  display: flex
  flex-direction: row
  width: 100%

div.section-log
  flex-grow: 1
  position: relative
  p.note
    position: absolute
    width: 100%
    margin-left: -5em
    padding-left: 1em
    font-style: italic
    font-size: 0.7em
    line-height: 1em

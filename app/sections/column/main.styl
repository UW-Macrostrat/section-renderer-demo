rect.lithology
  &.definite
    stroke: black
    stroke-width: 1px

div.section-container
  position: relative
  &.skeleton
    h2, p
      color: blue
    border: 1px solid dodgerblue
    background: alpha(dodgerblue, 0.1)
    div
      border: 1px solid dodgerblue
      background: alpha(dodgerblue, 0.1)

div.section-outer
  display: flex
  flex-direction: row
  width: 100%

div.section-log
  flex-grow: 1
  position: relative
  div.note
    position: absolute
    width: 100%
    padding-left: 1em
    font-style: italic
    font-size: 0.7em
    line-height: 1em

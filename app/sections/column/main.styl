rect.lithology
  &.definite
    stroke: black
    stroke-width: 1px

div.section-container
  position: relative
  &.skeleton
    h2, p
      color: blue

div.section-outer
  display: flex
  flex-direction: row
  width: 100%

div.section-log
  flex-grow: 1
  position: relative
  div.note
    position: absolute
    width: 100%
    padding-left: 1em
    font-style: italic
    font-size: 0.7em
    line-height: 1em
    .note-span-container
      position: relative
    .note-span
      position: absolute
      border-radius: 4px
      width: 5px
      left: -40px
      background-color: alpha(black,0.2)

.skeletal .note-span
  background: alpha(dodgerblue, 0.5)

.note.error
  p
    color: darken(red,0.2) !important
  background: alpha(red, 0.2) !important

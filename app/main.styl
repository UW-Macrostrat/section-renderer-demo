@require 'node_modules/@blueprintjs/core/dist/blueprint.css'

body
  margin: 0
  padding: 0
  position: relative

*
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif

#homepage
  margin: 2em 10em
  h1
    font-size: 3em
    margin-bottom: 1em
  p
    font-size: 1.2em

  ul.navigation
    li a
      padding: 1em
      background-color: #ddd
      text-decoration: none
      display: block
      margin-bottom: 1em
      color: black
      font-size: 1.2em
      &:hover
        background-color: dodgerblue
        color: white

#main
  width: 100%
  height: 100vh
  .page
    height: 100vh
    flex-direction: column

#root
  width: 100%
  height: 100%
  display: flex
  flex-direction: column

*:focus
  outline: 0

:local
  .navBar
    list-style: none
    margin: 0.2em
    padding-left: 0.5em
    li
      display: inline-block
    li a
      display: inline-block
      padding: 0.2em 0.5em
      background-color: #ddd
      text-decoration: none
      margin-right: 0.5em

  .active
    background-color: dodgerblue

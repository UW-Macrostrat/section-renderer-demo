@require './column/editor-styles'
@require './ui/main'

body, html
  margin 0

.app
  margin 0 auto
  max-width 800px

.main
  display flex
  flex-direction row

.menu-column
  display flex
  flex-direction column
  margin-right 1em

.main-menu
  padding-top 2em
  top 0
  position sticky
  display flex
  flex-direction column
  button
    margin-bottom 0.2em

.column-container
  position relative

.panel-column
  flex-grow 1

.interval-editor, .settings-panel
  top 0
  padding 2em 1em
  position sticky
  height 100vh
  overflow-y scroll

*
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif

// Column
.column
  margin 2em
  display: flex
  flex-direction row
  .age-axis-label
    writing-mode sideways-lr
    font-size 12px
    text-align: center

  .tick text
    writing-mode sideways-lr
    text-anchor middle
    transform translate(0,-3px)

rect.unit
  stroke: black
  stroke-width: 1px

.lithology-column .frame
  stroke black
  stroke-width: 1.5px

.note-label
  font-size: 10px
  margin-top 3px
  padding 2px
  padding-left: 3px
  line-height: 9px

.frame rect
  fill transparent

.macrostrat-map
  .graticule
    stroke-dasharray inherit
    stroke darken(#AFE6F0, 5%)
  .neatline
    stroke-width 1.5px


div.context-map
  position fixed
  top 1em
  right 1em
  width 200px

.land
  background-color rgb(233, 252, 234)
